{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "rules": {
    "semi": [
      2, "never"
    ],
    "no-underscore-dangle": [
      0
    ],
    "react/forbid-prop-types": [
      2,
      {
        "forbid": [
          "any",
          "array"
        ]
      }
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
